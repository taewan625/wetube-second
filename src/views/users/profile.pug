extends ../base
include ../mixins/video

block content
    div.profile__data
        if loggedInUser.socialOnly.toString().includes("github")
            img.avatar(crossorigin src=heroku? loggedInUser.avatarUrl: "/"+loggedInUser.avatarUrl)
        else 
            img.avatar(crossorigin src=heroku? loggedInUser.avatarUrl: "/"+loggedInUser.avatarUrl)
        h3=user.name
    div.video-grid
        each video in user.myVideos
            +videoMixin(video)
        else
            span.empty__message No videos found.